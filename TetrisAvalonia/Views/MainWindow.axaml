<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TetrisAvalonia.ViewModels"
        x:Class="TetrisAvalonia.Views.MainWindow"
        Title="Tetris with Avalonia"
        Width="400" Height="700">
        
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Highscore List -->
        <ListBox Grid.Row="0" x:Name="HighscoreList" Background="LightGray" Margin="10"/>

        <!-- Game Canvas -->
        <Canvas Grid.Row="1" x:Name="GameCanvas" Width="300" Height="600" Background="Black"/>
    </Grid>
</Window>